{
  "name": "api-starter",
  "version": "0.0.1",
  "description": "A simple node API starter",
  "main": "src/index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w",
    "serve-debug": "SOURCE_MAP=true nodemon --inspect --config .nodemon.json dist/index.js",
    "build": "tsc --build tsconfig.json",
    "copy:conf": "cp package.json yarn.lock dist/",
    "prettyall": "prettier --single-quote --write 'src/**/*.*'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kepennar/api-starter.git"
  },
  "keywords": [
    "Node.js",
    "starter",
    "api",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kepennar/api-starter/issues"
  },
  "homepage": "https://github.com/kepennar/api-starter#readme",
  "dependencies": {
    "app-root-path": "^3.0.0",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^4.0.1",
    "koa-helmet": "^5.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^9.0.1",
    "node-fetch": "^2.6.0",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/convict": "^5.2.1",
    "@types/dotenv": "^8.2.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  }
}
