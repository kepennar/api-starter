{
  "name": "@agado/starter",
  "description": "A simple node API starter",
  "version": "2.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./api",
    "./model"
  ],
  "scripts": {
    "build:all": "yarn build:model && yarn build:api",
    "configure:api": "yarn wait-for:db && yarn workspace @agado/api prisma:migrate",
    "build:api": "yarn workspace @agado/api prisma:generate && yarn workspace @agado/api build",
    "build:model": "yarn workspace @agado/model build",
    "commit": "git-cz",
    "start:api": "yarn workspace @agado/api start",
    "test:all": "yarn test:api",
    "test:api": "yarn wait-for:db && yarn workspace @agado/api test",
    "wait-for:db": "scripts/wait-for-db.sh",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "resolutions": {
    "**/**/fs-capacitor": "^6.2.0"
  },
  "devDependencies": {
    "commitizen": "^4.2.2",
    "conventional-changelog-angular": "^5.0.12",
    "conventional-changelog-core": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "cross-env": "^7.0.2",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0"
  }
}
