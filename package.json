{
  "name": "api-starter",
  "version": "0.0.1",
  "description": "A simple node API starter",
  "main": "src/index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w",
    "serve-debug": "SOURCE_MAP=true nodemon --inspect --config .nodemon.json dist/index.js",
    "prisma:generate": "yarn prisma generate",
    "prisma:db-upgrade": "prisma migrate up --experimental",
    "build": "tsc --build tsconfig.json",
    "copy:conf": "cp -r package.json yarn.lock dist/",
    "prettyall": "prettier --single-quote --write 'src/**/*.*'",
    "test": "jest --forceExit --coverage --verbose  --detectOpenHandles",
    "test:watch": "yarn test --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kepennar/api-starter.git"
  },
  "keywords": [
    "Node.js",
    "starter",
    "api",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kepennar/api-starter/issues"
  },
  "homepage": "https://github.com/kepennar/api-starter#readme",
  "dependencies": {
    "@prisma/client": "2.11.0",
    "@prisma/cli": "2.11.0",
    "app-root-path": "^3.0.0",
    "bcrypt": "^5.0.0",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-helmet": "^6.0.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.3",
    "koa-router": "^10.0.0",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bcrypt": "^3.0.0",
    "@types/convict": "^5.2.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compress": "^4.0.1",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.13",
    "@types/node-fetch": "^2.5.7",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@types/yup": "^0.29.9",
    "concurrently": "^5.3.0",
    "jest": "^26.0.1",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  }
}
